
<tr>
    <td><%= user.email %></td>
    <td><%= user.role %></td>
    <td><%= user.region.name unless user.region.nil? %></td>
    <td>
        <%= link_to "Edit", edit_admin_user_path(user), class: 'btn btn-xs btn-primary' %>
        <%= link_to "Destroy", admin_user_path(user), class: 'btn btn-xs btn-danger', method: :delete, data: {confirm: "Are you sure?"} %>
    </td>
</tr>
